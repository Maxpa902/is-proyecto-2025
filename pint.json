{
    "preset": "laravel",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "no_unused_imports": true,
        "single_quote": true,
        "simplified_if_return": true,
        "elseif": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_trailing_whitespace": true,
        "declare_strict_types": false,
        "binary_operator_spaces": {
            "default": "single_space"
        },
        "trim_array_spaces": true,
        "no_superfluous_phpdoc_tags": true,
        "visibility_required": true,
        "no_extra_blank_lines": true,
        "class_definition": {
            "single_line": true
        },
        "indentation_type": true,
        "no_whitespace_in_blank_line": true,
        "concat_space": {
            "spacing": "one"
        },
        "method_argument_space": {
            "on_multiline": "ensure_fully_multiline"
        },
        "no_multiline_whitespace_around_double_arrow": true,
        "phpdoc_align": true,
        "no_null_property_initialization": true,
        "single_blank_line_at_eof": true,
        "compact_nullable_type_declaration": true,
        "ternary_to_null_coalescing": true,
        "switch_case_space": true,
        "logical_operators": true,
        "align_multiline_comment": true,
        "lowercase_keywords": true,
        "no_mixed_echo_print": {
            "use": "echo"
        },
        "whitespace_after_comma_in_array": true,
        "braces_position": {
            "allow_single_line_anonymous_functions": false,
            "allow_single_line_empty_anonymous_classes": false,
            "anonymous_classes_opening_brace": "next_line_unless_newline_at_signature_end"
        },
        "numeric_literal_separator": true,
        "class_attributes_separation": {
            "elements": {
                "const": "none"
            }
        },
        "ordered_class_elements": {
            "case_sensitive": false,
            "order": [
                "use_trait",
                "case",
                "constant_public",
                "constant_protected",
                "constant_private",
                "property_public",
                "property_protected",
                "property_private",
                "construct",
                "destruct",
                "magic",
                "phpunit",
                "method_public",
                "method_protected",
                "method_private"
            ],
            "sort_algorithm": "none"
        },
        "no_empty_comment": true,
        "single_line_comment_spacing": true,
        "single_line_comment_style": { "comment_types": ["asterisk", "hash"] },
        "fully_qualified_strict_types": {
            "import_symbols": true,
            "leading_backslash_in_global_namespace": true,
            "phpdoc_tags": [
                "param", "phpstan-param", "phpstan-property", 
                "phpstan-property-read", "phpstan-property-write", 
                "phpstan-return", "phpstan-var", "property", 
                "property-read", "property-write", "psalm-param", 
                "psalm-property", "psalm-property-read", 
                "psalm-property-write", "psalm-return", 
                "psalm-var", "return", "see", "throws", "var"
            ]
        },
        "declare_equal_normalize": { "space": "single" },
        "no_useless_concat_operator": true,
        "standardize_increment": true,
        "phpdoc_add_missing_param_annotation": false

    }
}